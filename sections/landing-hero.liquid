<section class="hero" role="region" aria-label="Hero section">
  <div class="container hero-grid">
    <div class="hero-text">
      {% if section.settings.heading != blank %}
        <h1>
          {{ section.settings.heading }}
          {% if section.settings.heading_highlight != blank %}
            <span class="mobile-break">{{ section.settings.heading_highlight }}</span>
          {% endif %}
        </h1>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <p>{{ section.settings.description }}</p>
      {% endif %}
      
      {% if section.settings.cta_text != blank and section.settings.cta_url != blank %}
        <a href="{{ section.settings.cta_url }}" class="btn btn-blue">
          {{ section.settings.cta_text }}
          {% if section.settings.show_arrow %}
            <img src="{{ 'right-arrow.svg' | asset_url }}" alt="Right Arrow" />
          {% endif %}
        </a>
      {% endif %}
    </div>
    
    <div class="hero-image">
      {% if section.settings.hero_image != blank %}
        <img 
          src="{{ section.settings.hero_image | image_url: width: 1200 }}" 
          alt="{{ section.settings.hero_image.alt | default: 'Hero Illustration' | escape }}" 
          loading="lazy"
        />
      {% else %}
        <img src="{{ 'hero-placeholder.png' | asset_url }}" alt="Hero Illustration" />
      {% endif %}
    </div>
  </div>
</section>

<style>
  /* Use existing CSS variables and inherit from main stylesheet */
  .hero {
    background-color: var(--blue, #043873);
    background-image: url("{{ 'hero-vector.png' | asset_url }}");
    background-size: cover;
    background-position: center;
    padding: 80px 0;
    color: var(--white, #ffffff);
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 40px;
  }

  .hero-text h1 {
    font-size: 64px;
    margin-bottom: 20px;
    font-weight: 700;
  }

  .hero-text p {
    font-size: 18px;
    margin-bottom: 30px;
    font-weight: 400;
  }

  .hero-image img {
    max-width: 100%;
    border-radius: 8px;
    background-color: #c4defd;
  }

  .mobile-break {
    display: inline;
  }

  /* Responsive styles */
  @media (max-width: 768px) {
    .hero-grid {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-text h1 {
      font-size: 36px;
    }

    .hero-text p {
      font-size: 16px;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: 40px 0;
    }

    .hero-text h1 {
      font-size: 36px;
      font-weight: 700;
      line-height: 100%;
      text-align: center;
      margin-bottom: 30px;
    }

    .hero-text p {
      font-size: 18px;
      line-height: 30px;
      text-align: center;
      margin-bottom: 40px;
    }

    .mobile-break {
      display: block;
      margin-top: 15px;
    }

    .hero-image img {
      margin-bottom: 32px;
      margin-top: 8px;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Get More Done"
    },
    {
      "type": "text",
      "id": "heading_highlight",
      "label": "Heading Second Line",
      "default": "with whitepace"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Project management software that enables your teams to collaborate, plan, analyze and manage everyday tasks"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Try Whitepace free"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA Button Link"
    },
    {
      "type": "checkbox",
      "id": "show_arrow",
      "label": "Show arrow in button",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
