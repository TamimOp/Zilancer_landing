<style>
  :root {
    --blue: #043873;
    --blue-light: #4f9cf9;
    --yellow: #ffe492;
    --white: #ffffff;
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    border-radius: 8px;
    border: none;
    font-size: 18px;
  }
  .btn img {
    width: 14px;
    height: 14px;
    vertical-align: middle;
    margin-left: 0;
  }
  .btn-blue {
    background-color: var(--blue-light);
    color: var(--white);
    width: 219px;
    height: 63px;
    padding: 20px;
  }
  .content-block {
    background-color: var(--white);
    padding: 80px 0;
    position: relative;
    overflow: hidden;
  }
  .content-block::before {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 602.84px;
    height: 448.52px;
    background: url('https://placehold.co/602x448/C4DEFd/043873?text=Project+Background') left bottom/contain no-repeat;
    z-index: 0;
  }
  .content-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 40px;
    position: relative;
    z-index: 1;
  }
  .content-text h2 {
    font-size: 72px;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 20px;
    color: #212529;
  }
  .highlight {
    position: relative;
    display: inline-block;
  }
  .underline {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 678.74px; /* Default for Project Management */
    height: 65.55px; /* Default for Project Management */
    background-image: url('https://placehold.co/678x65/FFE492/FFE492');
    background-size: 100% 100%;
    background-repeat: no-repeat;
    pointer-events: none;
    z-index: -1;
    display: block;
    margin: 0;
  }
  .content-text p {
    font-size: 18px;
    color: #212529;
    margin-bottom: 30px;
    line-height: 1.6;
  }
  .content-image {
    width: 100%;
    max-width: 748px;
    height: auto;
    aspect-ratio: 748 / 547;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .content-image img {
    max-width: 100%;
    height: auto;
  }
  .image-placeholder {
    width: 100%;
    aspect-ratio: 748 / 547;
    border-radius: 8px;
    background-color: #c4defd;
  }

  .content-block-reverse .content-grid {
    gap: 60px;
  }
  .content-block-reverse .content-image {
    order: 2;
  }
  .content-block-reverse .content-text {
    order: 1;
  }

  /* Responsive */
  @media (min-width: 1920px) {
    .container {
      max-width: 1700px;
    }
  }
  @media (min-width: 1440px) {
    .container {
      max-width: 1400px;
    }
  }
  @media (max-width: 1240px) {
    .container {
      padding: 0 30px;
    }
  }
  @media (max-width: 968px) {
    .content-text h2 {
      font-size: 56px;
    }
    .content-grid {
      gap: 30px;
    }
    .content-block-reverse .content-grid {
      gap: 30px;
    }
  }
  @media (max-width: 768px) {
    .content-grid {
      grid-template-columns: 1fr;
      text-align: center;
    }
    .content-image {
      order: 2;
      aspect-ratio: unset;
      height: 250px;
    }
    .content-text {
      order: 1;
    }
    .content-block-reverse .content-grid {
      grid-template-columns: 1fr;
    }
    .content-block-reverse .content-image {
      order: 2;
    }
    .content-block-reverse .content-text {
      order: 1;
    }
