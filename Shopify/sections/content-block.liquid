<!--
  This is the Liquid code for a reusable content block.
  Save this as a file named `sections/content-block.liquid` in your theme.

  This single section can be used for both your "Project Management" and "Work Together"
  sections by simply changing the settings in the Theme Editor.
-->

{% schema %}
{
  "name": "Content Block",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Project"
    },
    {
      "type": "text",
      "id": "highlighted_text",
      "label": "Highlighted Text",
      "default": "Management"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text Content",
      "default": "<p>Images, videos, PDFs and audio files are supported. Create math expressions and diagrams directly from the app. Take photos with the mobile app and save them to a note.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Get Started"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "block_image",
      "label": "Block Image"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        { "value": "text_left", "label": "Text on Left" },
        { "value": "text_right", "label": "Text on Right" }
      ],
      "default": "text_left"
    }
  ],
  "presets": [
    {
      "name": "Project Management Section",
      "category": "Custom Sections",
      "settings": {
        "layout": "text_left",
        "heading": "Project",
        "highlighted_text": "Management",
        "text": "<p>Images, videos, PDFs and audio files are supported. Create math expressions and diagrams directly from the app. Take photos with the mobile app and save them to a note.</p>",
        "button_label": "Get Started"
      }
    },
    {
      "name": "Work Together Section",
      "category": "Custom Sections",
      "settings": {
        "layout": "text_right",
        "heading": "Work",
        "highlighted_text": "together",
        "text": "<p>With whitepace, share your notes with your colleagues and collaborate on them. You can also publish a note to the internet and share the URL with others.</p>",
        "button_label": "Try it now"
      }
    }
  ]
}
{% endschema %}

<!--
  The HTML below uses a conditional class to change the grid layout based on the
  "layout" setting. This makes it a single, reusable section.
-->
<section class="content-block {% if section.settings.layout == 'text_right' %}content-block-reverse{% endif %}">
  <div class="container content-grid">
    <div class="content-text">
      <h2>
        {{ section.settings.heading | split: section.settings.highlighted_text | first }}
        <span class="highlight">
          {{ section.settings.highlighted_text }}
          <div class="underline"></div>
        </span>
      </h2>
      {{ section.settings.text }}
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="btn btn-blue">
          {{ section.settings.button_label }}
          <img src="https://placehold.co/14x14/FFFFFF/000000?text=â†’" alt="Right Arrow" />
        </a>
      {% endif %}
    </div>
    <div class="content-image">
      {% if section.settings.block_image != blank %}
        <img src="{{ section.settings.block_image | image_url: width: 800 }}" alt="{{ section.settings.block_image.alt }}" />
      {% else %}
        <div class="image-placeholder"></div>
      {% endif %}
    </div>
  </div>
</section>

<!--
